@model DemoWebApplication.UnitMaster
<br />
<br />
<br />
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x=>x.UnitId )
        <div class="form-group">
            @Html.LabelFor(x => x.UnitName, "Unit Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.UnitName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.UnitName, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btn_Modify" value="Modify" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js">
    $(document).ready(function () {
        $("#btn_Modify").click(function () {
            if ($("#BatchName").Val() == "") {
                alert("Please Enter Batch Name");
            }
        });
    });
</script>
