
@model DemoWebApplication.UnitMaster 
<h4>
    New Unit
</h4>

@{
    @*@ViewBag.Message*@

    if (ViewBag.Message != null )
    {
        <script type="text/javascript">
            alert(@Html.Raw(Json.Encode(ViewBag.Message)));
        </script>
    }
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal container" id="mydiv">
        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x=>x.UnitId )
            <div class="form-group ">
                @Html.LabelFor(x => x.UnitName, "Unit Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.UnitName, "", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.UnitName, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" id="btn_Save" runat="server" onclick="btn_Save_Click" OnClientClick="return Validations();" />
                    <input type="button" value="Cancle" class="btn btn-default" id="btn_Cancle" onclick="ClearAllItem()" />
                </div>
            </div>
        </div>

    </div>

}
<p>
    @Html.ActionLink("Back to List","Index")
</p>
