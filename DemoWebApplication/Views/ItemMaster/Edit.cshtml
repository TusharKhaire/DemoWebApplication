@model DemoWebApplication.ItemMaster
    <h4>Edit Item</h4>
<hr/>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.ItemCode)
        <div class="form-group">
            @Html.LabelFor(x => x.ItemName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.ItemName, "", new { @Class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ItemType, htmlAttributes: new {@class= "control-lebel col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(x => x.ItemType, new { htmlAttributes = new {@class="form-conotrol"}})
                @Html.ValidationMessageFor(x=>x.ItemType,"",new { htmlAttributes = new {@class="text-danger"}})

            </div>
        </div>
    </div>
}
