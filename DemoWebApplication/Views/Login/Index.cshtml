@model DemoWebApplication.UserProfile

<script src="~/Scripts/MyJs.js"></script>
<link href="~/Scripts/mycss.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<fieldset>
    <center>
        <legend>Simple MVC Application Demo</legend>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true);
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            if (ViewBag.Message != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.Message:
                </div>
            }
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(a => a.UserName, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(a => a.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-2">
                        @Html.TextBoxFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Login" class="btn btn-default" />
                        <input type="button" value="Cancle" class="btn btn-default" onclick="Cancle()"/>
                    </div>

                </div>
            </div>

        }
    </center>
    @if (TempData["Msg"] != null)
    {
        <script type="text/javascript">

            window.onload = function clearall() {
                alert("@TempData["Msg"]");
                document.getElementById('UserName').value = "";
                document.getElementById('Password').value = "";
            };
        </script>
    }
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

</fieldset>

